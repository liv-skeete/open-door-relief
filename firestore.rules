rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // This rule allows anyone with your Firestore database reference to view, edit,
    // and delete all data in your Firestore database. This is useful for development
    // and testing purposes.
    //
    // NOTE: This configuration allows unrestricted access to your database,
    // which may pose security risks in a production environment.
    // Consider implementing proper authentication and authorization rules
    // for production use.
    // Allow public access to all documents (for backward compatibility)
    match /{document=**} {
      allow read, write: if true; // Updated to allow all access without time restriction
    }
    
    // User-specific rules
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}